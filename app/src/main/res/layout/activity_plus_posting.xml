<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11FFDF24"
    android:orientation="vertical"
    tools:context=".PlusPosting">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:elevation="2dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tvCancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:onClick="onClickCancel"
            android:background="@drawable/ripple_unbounded"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/teal_700" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:text="새로운 게시물"
            android:textColor="@color/blackPrimary"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOkay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/round_btn"
            android:backgroundTint="@color/grey"
            android:enabled="false"
            android:gravity="center"
            android:onClick="onClickOkay"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="작성 완료"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgPost"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/ic_baseline_photo_24" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:padding="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/round_background"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etContents"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="오늘 나의 하루는?"
                            android:textColor="@color/blackPrimary"
                            android:textSize="17dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/round_background"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:text="위치 태그"
                            android:textColor="@color/blackPrimary"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvLocation"
                                android:layout_width="0dp"
                                android:layout_weight="10"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=""
                                android:textColor="@color/blackPrimary"
                                android:textSize="16dp" />

                            <CheckBox
                                android:id="@+id/cbLoc"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:buttonTint="@color/teal_700"
                                android:layout_height="30dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:padding="15dp"
                    android:background="@drawable/round_background"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:text="해쉬 태그"
                        android:textColor="@color/blackPrimary"
                        android:textSize="20dp" />


                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/llTag"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" >
                        </LinearLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="#"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/blackPrimary"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/etTag"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="7"
                            android:hint="태그"
                            android:layout_marginRight="5dp"
                            android:inputType="textPersonName"
                            android:textColor="@color/blackPrimary" />

                        <TextView
                            android:id="@+id/btnTag"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:background="@drawable/round_btn"
                            android:backgroundTint="#BCE55C"
                            android:gravity="center"
                            android:text="입력"
                            android:textSize="15dp"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:padding="15dp"
                    android:background="@drawable/round_background"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFriend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:text="친구 태그"
                        android:textColor="@color/blackPrimary"
                        android:textSize="20dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/llFriend"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" >
                        </LinearLayout>
                    </HorizontalScrollView>

                    <Spinner
                        android:id="@+id/spinFriend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:padding="15dp"
                    android:background="@drawable/round_background"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPublic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:text="공개 범위 설정"
                        android:textColor="@color/blackPrimary"
                        android:textSize="20dp" />

                    <RadioGroup
                        android:id="@+id/rgrb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <RadioButton
                            android:id="@+id/rbtn1"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blackPrimary"
                            android:buttonTint="@color/teal_700"
                            android:textSize="16dp"
                            android:text="누구나 볼 수 있습니다" />

                        <RadioButton
                            android:id="@+id/rbtn2"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:buttonTint="@color/teal_700"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/blackPrimary"
                            android:text="친구만 볼 수 있습니다" />

                        <RadioButton
                            android:id="@+id/rbtn3"
                            android:layout_marginTop="5dp"
                            android:buttonTint="@color/teal_700"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/blackPrimary"
                            android:text="나만 보겠습니다" />
                    </RadioGroup>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>